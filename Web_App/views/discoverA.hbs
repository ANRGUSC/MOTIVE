<div class="jumbotron" style="background-color: #990000">
  <h1 style="color:#FFCC00">Vehicle in Range!</h1>
  <p style="color:#FFCC00">We Have Found A Vehicle Nearby! Connecting to Vehicle Number {{vehicle}}</p>

  <div class="progress">
    <div id="dynamic" class="progress-bar progress-bar-warning progress-bar-striped active" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
      <span id="current-progress"></span>
    </div>
  </div>

  <script>
  $(function() {
  var current_progress = 0;
  var interval = setInterval(function() {
      current_progress += 10;
      $("#dynamic")
      .css("width", current_progress + "%")
      .attr("aria-valuenow", current_progress)
      .text(current_progress + "% Complete");
      if (current_progress >= 100)
          clearInterval(interval);
  }, {{duration}}*100);
});
</script>

<script>
  var timeout = {{duration}}*1000 + 500;

  setTimeout(function () {
     window.location = "/linkpredictA";
  }, timeout);
</script>
</div>
